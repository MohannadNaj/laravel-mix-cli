{
  "name": "laravel-mix-cli",
  "version": "0.2.11",
  "description": "Simple CLI for initiating laravel-mix projects in non-laravel, standalone projects",
  "preferGlobal": true,
  "bin": {
    "mix": "bin/mix",
    "mix-init": "bin/mix-init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MohannadNaj/laravel-mix-cli.git"
  },
  "keywords": [
    "mix",
    "laravel",
    "laravel-mix",
    "laravel-mix-cli",
    "frontend-scaffolding"
  ],
  "author": "Mohannad Najjar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MohannadNaj/laravel-mix-cli/issues"
  },
  "homepage": "https://github.com/MohannadNaj/laravel-mix-cli#readme",
  "scripts": {
    "test": "nyc ava --verbose --serial",
    "test:watch": "nyc ava --verbose --serial --watch",
    "ava:watch": "ava --verbose --serial --watch",
    "lint": "standard --fix"
  },
  "files": [
    "src",
    "bin",
    "templates"
  ],
  "ava": {
    "files": ["test/MixInitializer.spec.js"],
    "sources": [
      "src/**/*",
      "!templates/**/*",
      "!templates/temp/**/*",
      "!stubs/**/*"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/test/**/*"
    ],
    "sourceMap": true,
    "instrument": true,
    "require": [],
    "all": true,
    "reporter": [
      "json",
      "lcov",
      "html",
      "text"
    ]
  },
  "dependencies": {
    "commander": "^2.11.0",
    "download-git-repo": "^1.0.1",
    "fs-extra": "^4.0.2",
    "lodash": "^3.10.1",
    "promptly": "^2.2.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "mock-require": "^2.0.2",
    "nyc": "^11.3.0",
    "sinon": "^4.1.2",
    "standard": "^10.0.3"
  }
}
